                          <td id="t1r1c4"><%= room.ac ? 'AC' : 'Non-AC' %></td>
                          <td id="t1r1c5" style="display: flex; justify-content: center;"><p class="p-sum"><%= room.price %></p></td>
                          <td id="t1r1c6">no. of months</td>
